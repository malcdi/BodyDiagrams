
<h1>Tell us about you!</h1>
<table>
	<tr ><td id="gender" style="text-align: center;">Male<td> </tr>
	<tr>
		<td style="width:150px">
			<img id="body_view" src="/assets/male_0.png" onmousedown="event.preventDefault();" 
				alt="no photo" style="width:150px;"> </img>
		</td>
		<td>
			<table>
			<tr>
				<td>	
				Select Gender: 
				</td>
				<td>
					<button type="button" id="genderButton" style='width: 40px; height:80px;background-image:url("/assets/genderIcon.png")'> </button> 
				</td>
			</tr>
			<tr>
				<td>
					Your Birth Year:
				</td>
				<td>
					<select id="birth">
						<%for i in 0...70%>
							<option value="<%=2010-i%>"><%=2010-i%></option>
						<%end%>
					</select>
				</td>
			</tr>
			<tr>
				<td></td>
				<td>
				<button type="button" id="next">Next</button>
				</td>
			</tr>
			</table>
		</td>
	</tr>
</table>


<script type="text/javascript">
var imagePrefix="/assets/";
$(function() {
	$("#genderButton").click(function(){
		var gender="male";
		if($("#gender").text()=="Male"){
			gender="female"
			$("#gender").text("Female");
		} else {
			$("#gender").text("Male");
		}
		$("#body_view").attr("src",ImageLoader.getBodyImageSrc(gender, 0));
	});
	
	$("#next").click(function(){
		var gender="male";
		if($("#body_view").attr("src").indexOf("female")!=-1){
			gender="female";
		}
		window.location="/main/app?gender="+gender+"&birth="+$("#birth").val();
	});
});


</script>